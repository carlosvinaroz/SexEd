<!-- res/layout/fragment_hygiene.xml -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diseases.GonorrheaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título arriba del todo -->
        <TextView
            android:id="@+id/gonorrheaTopTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gonorrhea_fragment_label"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <!-- Descripción justo debajo del título -->
        <TextView
            android:id="@+id/gonorrheaDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_gonorrhea"
            android:layout_below="@id/gonorrheaTopTitleTextView"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!-- Título justo debajo de la imagen -->

        <!-- Imagen entre la descripción y el siguiente título -->


        <ImageView
            android:id="@+id/gonorrheaImageView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_below="@id/gonorrheaDescriptionTextView"
            android:layout_marginTop="28dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image_bath_description"
            android:src="@drawable/gonorrhea" />
        <!-- Resto del contenido, como el GridLayout, debajo del segundo título -->

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
