<!-- fragment_diseases.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tarjeta para Clamidia -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Información sobre Clamidia (TextViews, ImageView, Enlace a YouTube) -->
            <!-- Puedes personalizar según tus necesidades -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clamidia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Agrega más TextViews, ImageView, y enlaces a YouTube según sea necesario -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Video sobre Clamidia"
                android:onClick="openYouTubeVideo"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tarjeta para Gonorrea -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Información sobre Gonorrea (TextViews, ImageView, Enlace a YouTube) -->
            <!-- Puedes personalizar según tus necesidades -->

            <!-- Etiqueta para el nombre de la enfermedad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gonorrea"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Agrega más TextViews, ImageView, y enlaces a YouTube según sea necesario para Gonorrea -->

            <!-- Botón para ver un video sobre Gonorrea -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Video sobre Gonorrea"
                android:onClick="openYouTubeVideo"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tarjeta para VPH -->
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Información sobre VPH (TextViews, ImageView, Enlace a YouTube) -->
                <!-- Puedes personalizar según tus necesidades -->

                <!-- Etiqueta para el nombre de la enfermedad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virus del Papiloma Humano (VPH)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Agrega más TextViews, ImageView, y enlaces a YouTube según sea necesario para VPH -->

                <!-- Botón para ver un video sobre VPH -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Video sobre VPH"
                    android:onClick="openYouTubeVideo"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
